<h1>Admin</h1>

<h2>Users</h2>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Admin</th>
    <th></th>

  </tr>

  <% @users.each do |user| %>
    <tr>
       <! -- make this a link to the user's profile page -->
      <td><%= link_to user.profile.full_name, profile_path(user.profile) %></td>
      <td><%= user.email %></td>
      <td><%= user.profile.phone %></td>

      <!-- #bonus for a button that makes the user an admin   -->
      <td><%= link_to 'Make admin', 'make_admin/' + user.id.to_s, class: 'btn btn-info' %></td>
      <!-- delete user -->

        <% if user == current_user %>
        <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
        <% else %>
      <td><%= link_to 'Delete user', user_path(user), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
      </tr>

      <% end %>
</table>
