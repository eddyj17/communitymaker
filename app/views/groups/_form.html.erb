  <%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :group_category %>
    <%= f.input :name %>
    <%= f.input :description %>
    <ul>

    <li>Logo</li>
    <label class="file">
      <%= f.file_field :logo %>
      <span class="file-custom"></span>
    </label>
      <%= f.input_field :logo, as: :file %>


    <li>Banner</li>
    <label class="file">
      <%= f.file_field :banner %>
      <span class="file-custom"></span>
      </label>
      <%= f.input_field :banner, as: :file %>

    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
